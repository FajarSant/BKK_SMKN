{
    "version": 2,
    "builds": [
      {
        "src": "src/index.js",
        "use": "@vercel/node",
        "config": { "maxLambdaSize": "2048mb" },
        "build": { "env": { "DATABASE_URL": "@database-url" }, "functions": { "api/**/*": { "memory": 1024 } } }
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build"
      }
    ],
    "routes": [{ "src": "/.*", "dest": "/src/index.js" }],
    "env": { "DATABASE_URL": "@database-url" }
  }
  